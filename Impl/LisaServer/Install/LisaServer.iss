var
  ResultCode: integer;
begin
  if DirExists(ExpandConstant('{pf64}\ImagingTools\LisaServer')) then
  begin
    // DelTree(ExpandConstant('{pf64}\ImagingTools\LisaServer'), True, True, True);
  end;
  Result := True;
end;

