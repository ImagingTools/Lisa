{
  "name": "lisa-tests",
  "version": "1.0.0",
  "description": "Testing system for Lisa application with Playwright (GUI) and Newman (API) tests",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:gui && npm run test:api",
    "test:gui": "playwright test",
    "test:gui:headed": "playwright test --headed",
    "test:gui:debug": "playwright test --debug",
    "test:api": "newman run API/collections/example.postman_collection.json -e API/environments/example.postman_environment.json",
    "test:api:verbose": "newman run API/collections/example.postman_collection.json -e API/environments/example.postman_environment.json --verbose",
    "install:browsers": "playwright install --with-deps",
    "docker:build:linux": "docker build -f Docker/Dockerfile.linux -t lisa-tests:linux .",
    "docker:build:windows": "docker build -f Docker/Dockerfile.windows -t lisa-tests:windows .",
    "docker:run:linux": "docker-compose -f Docker/docker-compose.linux.yml up --abort-on-container-exit",
    "docker:run:windows": "docker-compose -f Docker/docker-compose.windows.yml up --abort-on-container-exit",
    "setup": "npm install && npm run install:browsers"
  },
  "keywords": [
    "testing",
    "playwright",
    "newman",
    "postman",
    "docker",
    "e2e",
    "api"
  ],
  "author": "ImagingTools",
  "license": "LGPL",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "newman": "^6.0.0",
    "newman-reporter-htmlextra": "^1.23.0"
  },
  "dependencies": {}
}
